config CURUVAR_I2C_SLAVE_TEST
	tristate "Curuvar I2C Slave Test"
	default n

if CURUVAR_I2C_SLAVE_TEST

config CURUVAR_I2C_SLAVE_TEST_PROGNAME
	string "Program Name"
	default "i2c_slave_test"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config CURUVAR_I2C_SLAVE_TEST_PRIORITY
	int "Task Priority"
	default 100

config CURUVAR_I2C_SLAVE_TEST_STACKSIZE
	int "Stack Size"
	default DEFAULT_TASK_STACKSIZE

endif
